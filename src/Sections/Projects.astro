---
import ProjectCard from '@/components/ProjectCard.astro'
import SectionHeader from '@/components/SectionHeader.astro'

interface Project {
  title: string
  description: string
  stack: string[]
  github?: string
  demo?: string
}

const projects: Project[] = [
  {
    title: 'SharedShop',
    description:
      'Aún en desarrollo, SharedShop será una aplicación móvil colaborativa para gestión de listas de compras enfocada en familias, que permitirá a múltiples usuarios ver, agregar y modificar productos en tiempo real mediante WebSockets.',
    stack: [
      'React Native',
      'Expo',
      'NestJS',
      'DrizzleORM',
      'Clerk',
      'Turso',
      'WebSockets',
      'TypeScript',
      'Nativewind'
    ],
    github: 'https://github.com/Ipambe/SharedShop'
  },
  {
    title: 'DaranGet',
    description:
      'Aplicación web que permite a los usuarios descargar videos y audios de páginas como YouTube, Facebook, Instagram y TikTok. La aplicación cuenta también con un bot de discord y una extensión de Chrome.',
    stack: ['React', 'Axios', 'Node.js', 'Express', 'Discord.js'],
    github: 'https://github.com/BarkoRD/daranget',
    demo: 'https://get.daranhub.com'
  },
  {
    title: 'Martínez Misceláneos',
    description:
      'Es una página web que muestre el catálogo de productos de la tienda Martínez Misceláneos. La página también cuenta con un panel de administración que usa OAuth 2.0 para gestionar los productos.',
    stack: [
      'Astro',
      'Tailwind CSS',
      'React',
      'NestJS',
      'DrizzleORM',
      'SQLite',
      'JWT',
      'OAuth2'
    ]
  }
]
---

<section class='flex flex-col gap-4' id='projects'>
  <SectionHeader title='Mis proyectos' />
  <ul class='flex flex-col gap-4'>
    {
      projects.map(({ title, description, stack, github, demo }) => (
        <ProjectCard
          title={title}
          description={description}
          stack={stack}
          github={github}
          demo={demo}
        />
      ))
    }
  </ul>
</section>
