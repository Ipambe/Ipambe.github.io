    <meta
      name='author'
      content='Adolfo Rosa'
    />
    <meta
      property='og:title'
      content='Adolfo Rosa - Desarrollador Web Full-Stack'
    />
    <meta
      property='og:description'
      content='Explora el portfolio de Adolfo Rosa para ver sus proyectos y habilidades en desarrollo web.'
